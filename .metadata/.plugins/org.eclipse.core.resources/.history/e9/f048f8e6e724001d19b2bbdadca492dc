class Animal:
    def __init__(self):
        self.flagMove = True
        
    
    def die(self):
        self.flagMove = False
    
    def liv(self):
        self.flagMove = True

ani = Animal()
print(ani.flagMove)
ani.die()
print(ani.flagMove)

class Human(Animal):
    def __init__(self, flagMove):
        self.flagMove = flagMove

hum = Human(Animal)
print(hum.flagMove)
hum.liv()
print(hum.flagMove)    